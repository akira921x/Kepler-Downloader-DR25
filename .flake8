[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache
ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (we use 120 instead of 79)
    E501
per-file-ignores =
    # Ignore imports in __init__.py
    __init__.py:F401
    # Allow star imports in tests
    tests/*.py:F403,F405